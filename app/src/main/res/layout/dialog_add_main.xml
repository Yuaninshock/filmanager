<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color2"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="添加订单"
        android:layout_marginStart="@dimen/tenDP"
        android:background="@color/color3"
        android:textColor="@android:color/black"
        android:textSize="@dimen/thirtySp" />

    <EditText
        android:id="@+id/dialog_add_main_edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入电影名称" />

    <RelativeLayout
        android:id="@+id/activity_add_book_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/thirtyDp"
        android:background="@color/color2"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/fiveDP">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:background="@null"
            android:gravity="center"
            android:text="选择观影时间"
            android:textColor="@color/color4"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/activity_add_book_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:gravity="center"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:textColor="@color/color5"
            android:textSize="15sp" />

    </RelativeLayout>

    <Spinner
        android:id="@+id/dialog_add_main_sp_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fiveDP" />

    <EditText
        android:id="@+id/dialog_add_main_edt_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fiveDP"
        android:inputType="numberDecimal"
        android:hint="请输入票价" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dialog_add_main_btn_qrCode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fiveDP"
            android:text="生成二维码" />

        <Button
            android:id="@+id/dialog_add_main_btn_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fiveDP"
            android:text="保存" />

        <Button
            android:id="@+id/dialog_add_main_btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fiveDP"
            android:text="取消" />

    </LinearLayout>


    <ImageView
        android:id="@+id/dialog_add_main_imv"
        android:layout_width="@dimen/twoHundredDp"
        android:layout_height="@dimen/twoHundredDp"
        android:layout_marginTop="@dimen/twentyDp"
        android:layout_gravity="center" />

</LinearLayout>